{
    "version": "2.0.0",
    "tasks": [
    {
        "label": "Compile Verilog with Icarus",
        "type": "shell",
        "command": "sh",
      
        "args": [
            "-c",
            "iverilog -o ${workspaceFolder}/sim/${fileBasenameNoExtension}.vvp $(find ${workspaceFolder}/src/ -name '*.v') ${file}"
        ],
     
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": []
    },
    {
        "label": "Run Simulation with VVP",
        "type": "shell",
        "command": "sh",
        "args": [
            "-c",
            "vvp ${workspaceFolder}/sim/${fileBasenameNoExtension}.vvp"
        ],
        "dependsOn": ["Compile Verilog with Icarus"],
        "problemMatcher": []
    }
  ]
}
